<h1>Processos</h1>

<style type="text/css">
  label,  input {
    display: block;
    float: left;
  }

  label {
    text-align: right;
    width: 50px;
    padding-right: 20px;
    padding-bottom: 10px;
  }

  fieldset {
    border: solid 1px #000;
  }

  br {
    clear: left;
  }
</style>

<% unless @process_list.blank? %>
  <div class="autoscroll">
    <table class="list issues">
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Versão</th>
        <th></th>
      </tr>

      <% @process_list.each do |process| %>
        <tr>
          <td><%= process.name %></td>
          <td><%= process.description %></td>
          <td><%= process.version %></td>
          <td><%= link_to l('start_process'), new_bpm_process_path(processId: process.id), method: :get %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
